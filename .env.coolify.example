# Dify for Coolify - Environment Variables
# Copy this file to .env and fill in your values
# UYARI: Bu dosya test amaçlı dummy değerler içerir - Production'da mutlaka değiştirin!

# ------------------------------
# Database Configuration (Required)
# ------------------------------
DB_USERNAME=postgres
DB_PASSWORD=dify_test_db_password_123
DB_HOST=db
DB_PORT=5438
DB_DATABASE=dify

# ------------------------------
# Redis Configuration (Required)
# ------------------------------
REDIS_HOST=redis
REDIS_PORT=6380
REDIS_PASSWORD=dify_test_redis_password_456
REDIS_DB=0

# ------------------------------
# Application Security (Required)
# ------------------------------
# Generate a strong key using: openssl rand -base64 42
SECRET_KEY=dify_test_secret_key_abcdef123456789_change_in_production

# Admin password for initial setup (optional)
INIT_PASSWORD=admin123

# ------------------------------
# Vector Database Configuration (Required)
# ------------------------------
VECTOR_STORE=weaviate
WEAVIATE_ENDPOINT=http://weaviate:8080
# Generate a strong API key
WEAVIATE_API_KEY=dify_test_weaviate_key_789abc

# ------------------------------
# Sandbox Configuration (Required)
# ------------------------------
# Generate a strong API key
SANDBOX_API_KEY=dify_test_sandbox_key_def456

# ------------------------------
# Plugin Configuration (Required)
# ------------------------------
# Generate a strong API key
PLUGIN_DIFY_INNER_API_KEY=dify_test_plugin_key_ghi789

# ------------------------------
# URL Configuration (Optional)
# ------------------------------
# Set these if you're using a custom domain
CONSOLE_API_URL=
CONSOLE_WEB_URL=
SERVICE_API_URL=
APP_API_URL=
APP_WEB_URL=
FILES_URL=http://api:5001

# ------------------------------
# Server Configuration (Optional)
# ------------------------------
LOG_LEVEL=INFO
DEBUG=false
FLASK_DEBUG=false
DEPLOY_ENV=PRODUCTION

# ------------------------------
# Storage Configuration (Optional)
# ------------------------------
STORAGE_TYPE=opendal
OPENDAL_SCHEME=fs
OPENDAL_FS_ROOT=storage

# ------------------------------
# CORS Configuration (Optional)
# ------------------------------
WEB_API_CORS_ALLOW_ORIGINS=*
CONSOLE_CORS_ALLOW_ORIGINS=*

# ------------------------------
# Migration (Optional)
# ------------------------------
MIGRATION_ENABLED=true

# ------------------------------
# Web Frontend Configuration (Optional)
# ------------------------------
NEXT_TELEMETRY_DISABLED=1
TEXT_GENERATION_TIMEOUT_MS=60000